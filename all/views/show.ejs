      </div>








            <div class="pp">
                  <div class="trailer-box">


                       

                              <iframe width="100%" height="400" src="https://www.youtube.com/embed/<%= trailer.videos.results[0].key %>?start=5" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

                  </div>

            </div>
<div class="container">
       

            <h1 class="cast-name">Cast And Crew</h1>
                  <div class="p">
                              <div class="row" style="display: flex; flex-wrap: wrap">
                                  
                        <% casts.cast.forEach(function(cast){ %>
                          <% if(cast.profile_path==null){ %>
                                  
                                         <% } else{ %>
                                          <div class="col-sm-6 col-md-3 col-lg-3">
                                           
                                             
                                              
                                            
                                                      <img src="https://image.tmdb.org/t/p/w500<%= cast.profile_path %>" style="width: 100%">
                                          
                                        
                                              <h3 class="cast-name"><%= cast.name %></h3>
                                          
                                        
                                      
                                    </div>
                                    <% } %>
                         <%  })  %>
                        </div>
                        </div>
















                      <% if(reviews.results.length==0){ %>

                        <% }else{ %>
                              <h2 class="rev cast-name">Reviews</h2>
                       <% } %>
                        
            <div class="review-box">
                       
                  <% reviews.results.forEach(function(review) { %>
                        
                        <div class="review col-sm-6 col-md-8 col-lg-10">
                                    
                              <div class="panel panel-primary">
                                    <div class="panel-heading">
                                          <h3 class="panel-title rev">
                                                <%= review.author %>
                                          </h3>
                                    </div>
                                    <div class="panel-body">
                                        <p class="rev"> <%= review.content %></p> 
                                    </div>
                              </div>
                        </div>
                        <% }) %>

            </div>
     
       

            <% include partials/footer.ejs %>